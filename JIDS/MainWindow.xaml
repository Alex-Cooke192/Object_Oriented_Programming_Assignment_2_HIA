<Window x:Class="JIDS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="JIDS - Jet Interior Designer"
        Height="720"
        Width="1100"
        WindowStartupLocation="CenterScreen">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Top bar -->
		<DockPanel Grid.Row="0" Background="#726363" Height="48" VerticalAlignment="Top">
			<TextBlock Text="JIDS" FontWeight="Bold" Foreground="White" FontSize="18" Margin="12,0" VerticalAlignment="Center" DockPanel.Dock="Left"/>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,12,0" DockPanel.Dock="Right">
				<Button x:Name="BtnLogout" Content="Logout" Width="80" />
			</StackPanel>
		</DockPanel>

		<!-- Main content -->
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="220"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<!-- Navigation pane -->
			<Border Grid.Column="0" Background="#726363" BorderBrush="#FFE0E0E0" BorderThickness="0,1,1,1">
				<StackPanel Margin="12">
					<TextBlock Text="Navigation" FontWeight="SemiBold" Margin="0,4" />
					<ListBox x:Name="NavList" Margin="0,8,0,0">
						<ListBoxItem Tag="Login">Login</ListBoxItem>
						<ListBoxItem Tag="ConfigurationList">Configurations</ListBoxItem>
						<ListBoxItem Tag="ConfigurationEditor">Editor</ListBoxItem>
					</ListBox>
				</StackPanel>
			</Border>

			<!-- Content frame -->
			<Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Background="White" />
		</Grid>
	</Grid>
</Window>