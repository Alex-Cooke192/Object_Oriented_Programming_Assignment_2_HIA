<Window x:Class="JetInteriorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Jet Interior Designer"
        Height="600" Width="900">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Configs list -->
        <StackPanel Grid.Column="0" Margin="5">
            <TextBlock Text="Jet Configurations" FontWeight="Bold" FontSize="18" />

            <ListBox ItemsSource="{Binding Configurations}"
                     SelectedItem="{Binding SelectedConfiguration}"
                     DisplayMemberPath="Name"
                     Height="300"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
                <Button Command="{Binding RefreshCommand}" Content="Refresh" Width="75" Margin="5"/>
                <Button Command="{Binding NewConfigCommand}" Content="New" Width="75" Margin="5"/>
                <Button Command="{Binding CloneConfigCommand}" Content="Clone" Width="75" Margin="5"/>
                <Button Command="{Binding DeleteConfigCommand}" Content="Delete" Width="75" Margin="5"/>
                <Button Command="{Binding SaveAllCommand}" Content="Save" Width="75" Margin="5"/>
            </StackPanel>

            <TextBlock Text="{Binding StatusText}" FontStyle="Italic" Foreground="DarkBlue" Margin="5"/>
        </StackPanel>

        <!-- Selected config details -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Configuration Details" FontWeight="Bold" FontSize="18"/>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Name:" Width="100"/>
                <TextBox Text="{Binding SelectedConfiguration.Name}" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Cabin Size:" Width="100"/>
                <TextBox Text="{Binding SelectedConfiguration.CabinDimensions}" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Seats:" Width="100"/>
                <TextBox Text="{Binding SelectedConfiguration.SeatingCapacity}" Width="50"/>
            </StackPanel>

            <TextBlock Text="Components" FontWeight="Bold" Margin="10,20,0,5"/>

            <DataGrid ItemsSource="{Binding SelectedConfiguration.Components}"
                      AutoGenerateColumns="False" Height="250">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}"/>
                    <DataGridTextColumn Header="Tier" Binding="{Binding Tier}"/>
                    <DataGridTextColumn Header="Material" Binding="{Binding Material}"/>
                    <DataGridTextColumn Header="X" Binding="{Binding X}"/>
                    <DataGridTextColumn Header="Y" Binding="{Binding Y}"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                <Button Command="{Binding AddComponentCommand}" Content="Add Component" Width="120" Margin="5"/>
                <Button Command="{Binding RemoveComponentCommand}" Content="Remove Component" Width="120" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
