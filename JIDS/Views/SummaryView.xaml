<Page x:Class="JIDS.Views.SummaryView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Configuration Summary"
      MinWidth="600" MinHeight="420">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Configuration Summary" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <TextBlock Text="Name: " FontWeight="SemiBold" Width="110"/>
                <TextBlock Text="{Binding Name}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <TextBlock Text="Cabin Dimensions: " FontWeight="SemiBold" Width="110"/>
                <TextBlock Text="{Binding CabinDimensions}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <TextBlock Text="Seating Capacity: " FontWeight="SemiBold" Width="110"/>
                <TextBlock Text="{Binding SeatingCapacity}"/>
            </StackPanel>
        </StackPanel>

        <!-- Components list -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding InteriorComponents}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="0,0,0,8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*"/>
                <DataGridTextColumn Header="Tier" Binding="{Binding Tier}" Width="*"/>
                <DataGridTextColumn Header="Material" Binding="{Binding Material}" Width="*"/>
                <DataGridTextColumn Header="Position" Binding="{Binding Position}" Width="*"/>
                <DataGridTextColumn Header="Properties" Binding="{Binding PropertiesJson}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer actions -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" Margin="0,0,12,0" Foreground="DarkRed"/>
            <Button Content="Back to Editor" Width="130" Margin="0,0,8,0" Command="{Binding EditCommand}"/>
            <Button Content="Export" Width="100" Margin="0,0,8,0" Command="{Binding ExportCommand}"/>
            <Button Content="Save" Width="100" Margin="0,0,8,0" Command="{Binding SaveCommand}"/>
            <Button Content="Submit" Width="100" Command="{Binding SubmitCommand}"/>
        </StackPanel>
    </Grid>
</Page>