<Window x:Class="JetInteriorApp.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:JetInteriorApp.ViewModels"
        Title="Login" Height="350" Width="400">

    <Window.DataContext>
        <vm:LoginViewModel />
    </Window.DataContext>

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <TextBlock Text="Username" Margin="0,5"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Email (for registration)" Margin="0,10,0,5"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Password" Margin="0,10,0,5"/>
            <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged"/>

            <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Center" >
                <Button Content="Login" Width="100" Margin="0,0,10,0" Command="{Binding LoginCommand}" />
                <Button Content="Register" Width="100" Command="{Binding RegisterCommand}" />
            </StackPanel>

            <TextBlock Text="{Binding StatusMessage}" Foreground="Red" Margin="0,20,0,0" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>